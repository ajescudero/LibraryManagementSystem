<h1>Books</h1>

<%= link_to 'New Book', new_book_path if current_user.librarian? %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>ISBN</th>
      <th>Total Copies</th>
      <th>Available Copies</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.isbn %></td>
        <td><%= book.total_copies %></td>
        <td><%= book.available_copies %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) if current_user.librarian? %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } if current_user.librarian? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
